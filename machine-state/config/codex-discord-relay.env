DISCORD_BOT_TOKEN=REDACTED
CODEX_BIN=codex
CODEX_WORKDIR=/root
CODEX_ALLOWED_WORKDIR_ROOTS=/root
CODEX_MODEL=
CODEX_SANDBOX=danger-full-access
CODEX_APPROVAL=never
CODEX_ENABLE_SEARCH=true
CODEX_SKIP_GIT_REPO_CHECK=true
CODEX_CONFIG_OVERRIDES=
RELAY_STATE_DIR=/root/.codex-discord-relay
RELAY_STATE_FILE=/root/.codex-discord-relay/sessions.json
RELAY_MAX_REPLY_CHARS=1800
DISCORD_ALLOWED_GUILDS=1472061022239195304
DISCORD_ALLOWED_CHANNELS=1472061023778242744

# Uploads: allow Codex (or /upload) to attach images from outside the per-conversation upload_dir,
# but only under these safe roots.
RELAY_UPLOAD_ALLOW_OUTSIDE_CONVERSATION=true
RELAY_UPLOAD_ALLOWED_ROOTS=/root,/tmp
RELAY_AGENT_PROVIDER=codex
CLAUDE_BIN=claude
CLAUDE_PERMISSION_MODE=bypassPermissions

RELAY_AGENT_TIMEOUT_MS=0

# Global context injected into every message so agents always have current context
# without needing a session reset.
RELAY_CONTEXT_ENABLED=true
RELAY_CONTEXT_EVERY_TURN=true
RELAY_CONTEXT_VERSION=2
RELAY_CONTEXT_FILE="/root/.codex-discord-relay/global-context.md;tail:docs/WORKING_MEMORY.md;tail:HANDOFF_LOG.md;tail:/root/SYSTEM_SETUP_WORKING_MEMORY.md;tail:/root/HANDOFF_LOG.md"
RELAY_CONTEXT_MAX_CHARS=40000
RELAY_CONTEXT_MAX_CHARS_PER_FILE=20000

RELAY_THREAD_AUTO_RESPOND=true
RELAY_PROGRESS=true
RELAY_PROGRESS_MIN_EDIT_MS=5000
RELAY_PROGRESS_HEARTBEAT_MS=20000
RELAY_PROGRESS_MAX_LINES=6
RELAY_PROGRESS_SHOW_COMMANDS=false

# Agent-requested relay actions (high power; enable only in trusted contexts).
# See toolkit docs: /root/openclaw-codex-discord-skills-kit/codex-discord-relay/README.md
RELAY_AGENT_ACTIONS_ENABLED=true
RELAY_AGENT_ACTIONS_DM_ONLY=false
RELAY_AGENT_ACTIONS_ALLOWED=job_start,job_stop,job_watch
RELAY_AGENT_ACTIONS_MAX_PER_MESSAGE=1

# If an agent starts a job (job_start) without specifying a watch config, auto-watch using defaults.
RELAY_JOBS_AUTO_WATCH=true
RELAY_JOBS_AUTO_WATCH_EVERY_SEC=300
RELAY_JOBS_AUTO_WATCH_TAIL_LINES=50

RELAY_AUTO_HANDOFF_AFTER_EACH_TASK=true

RELAY_AUTO_HANDOFF_AFTER_TASK_RUN=false

RELAY_AUTO_HANDOFF_AFTER_PLAN_APPLY=false

RELAY_HANDOFF_AUTO_ENABLED=false
